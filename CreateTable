
while true; do
        echo "Enter Your New Table Name: "
        read tbn
        test_tbn=$(check_name "$tbn")
        if [ $test_tbn -eq "1" ]; then
                echo "Naming Error please Enter only English Alphapet"; continue
        elif [ -f "$tbn" ]; then
                echo "Table Already Exists , Enter a new Name;"; continue
        else
                touch "$tbn.db" "$tbn.meta"
                printf "n\nn" > "$tbn.meta"
                break
        fi
done

while true; do
        echo "Enter The Number of Columns"
        read columns_number
        test_columns_number=$(only_numbers "$columns_number")
        if [ $test_columns_number -eq "0" ] && [ "$columns_number" -gt "0" ]; then
                for i in $(seq 1 $columns_number);
                do
                        echo "Enter $i Column Name"
                        read col_name
                        while true; do
echo "Enter $i Column Type"
echo -ne "
$(Red '1) Integer') 
$(Red '2) String') 
"
                            read col_type
                            echo $col_type
                            if [ $col_type -ne "1" ] && [ $col_type -ne "2" ]; then
                                    echo "Choose correct option"
                                    continue
                            fi
                            break
                        done
                        
                        while true; do
                                echo "Do you want this column as a primary key"
echo -ne "
$(Red '1) No')
$(Red '2) Yes')
"
                                read col_pk
                                if [ $col_pk -ne "1" ] && [ $col_pk -ne "2" ]; then
                                        echo "Choose correct option"
                                        continue
                                fi
                                if [ $col_pk -eq "2" ]; then
                                        col_type=$(( $col_type + 2 ))
                                fi
                                break
                        done
                        #sed -i "${i}s/$/:$col_name/" $tbn.meta
                        sed -i "1s/$/:$col_name/" $tbn.meta
                        #sed -i "$((i + 1))s/$/:$col_type/" $tbn.meta
                        sed -i "2s/$/:$col_type/" $tbn.meta
        
                        done
                        sed -i 's/^n://' $tbn.meta
                        break
        else
                echo "Error Enter a positive number"
                continue
        fi
done